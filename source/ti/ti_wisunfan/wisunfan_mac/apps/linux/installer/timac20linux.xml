<project>
    <preBuildActionList>
      <setInstallerVariable name="project.version" value="${env(VERSION)}"/>
    </preBuildActionList>
    <shortName>timac</shortName>
    <fullName>TI-15.4Stack Linux SDK Version ${env(VERSION)}</fullName>
    <version>${env(VERSION)}</version>
    <installerFilename>${env(INSTALLER_FILENAME)}</installerFilename>
    <licenseFile>${env(RELEASE_DIRECTORY)}/license_ti15.4stack_linux_x64_${project.version}.txt</licenseFile>
    <splashImage>splash_screen_image.png</splashImage>
    <leftImage>left.png</leftImage>
    <logoImage>lprf-sd-installers/common/images/ti.png</logoImage>
    <outputDirectory>${env(OUTPUT_DIRECTORY)}</outputDirectory>
    <componentList>
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>${env(RELEASE_DIRECTORY)}/.</origin>
                        </distributionDirectory>
                    </distributionFileList>
                    <shortcutList>
                        <shortcut>
                            <comment>Uninstall</comment>
                            <exec>${installdir}/${uninstallerName}</exec>
                            <icon>lprf-sd-installers/common/images/txn.ico</icon>
                            <name>Uninstall ${product_fullname}</name>
                            <path>${installdir}</path>
                            <platforms>all</platforms>
                            <runAsAdmin>0</runAsAdmin>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon>lprf-sd-installers/common/images/txn.ico</windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileslinux</name>
                    <platforms>linux</platforms>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileswindows</name>
                    <platforms>windows</platforms>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfilesosx</name>
                    <platforms>osx</platforms>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Uninstall ${product_fullname}</comment>
                    <name>Uninstall ${product_fullname}</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon>lprf-sd-installers/common/images/txn.ico</windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
    </componentList>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <saveRelativePaths>1</saveRelativePaths>
    <vendor>Texas Instruments</vendor>
    <finalPageActionList>
        <runProgram>
            <program>xdg-open</program>
            <programArguments>${installdir}/release_notes_ti15.4stack_linux_x64_${project.version}.html</programArguments>
            <progressText>Read the Release Notes</progressText>
        </runProgram>
        <runProgram>
            <program>xdg-open</program>
            <programArguments>${installdir}/manifest_ti15.4stack_linux_x64_${project.version}.html</programArguments>
            <progressText>Read the Manifest</progressText>
        </runProgram>
    </finalPageActionList>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value></value>
            <default>${env(HOME)}/ti/simplelink/ti-15.4stack-${project.version}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>yes</mustBeWritable>
            <mustExist>0</mustExist>
            <width>50</width>
        </directoryParameter>
    </parameterList>
    <platformOptionsList>
        <platformOptions>
            <platform>linux-x64</platform>
        </platformOptions>
    </platformOptionsList>
</project>

